# Fi Financial AI Dashboard - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# GOOGLE CLOUD & AI CONFIGURATION
# ===========================================

# Required: Your Google API Key for Gemini
GOOGLE_API_KEY=your_google_api_key_here

# Google Cloud Project Settings
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
GOOGLE_CLOUD_LOCATION=us-central1
GOOGLE_GENAI_USE_VERTEXAI=1

# Gemini Model Configuration
GEMINI_MODEL=gemini-1.5-flash

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application Settings
PORT=8080
LOG_LEVEL=INFO
DATABASE_URL=sqlite:///./agentic_ai.db

# MCP Server Configuration
MCP_SERVER_URL=http://localhost:8000

# ===========================================
# AI QUOTA MANAGEMENT
# ===========================================

# Daily and hourly limits for AI requests
MAX_DAILY_AI_REQUESTS=50
MAX_HOURLY_AI_REQUESTS=10
AI_INSIGHTS_ON_DEMAND_ONLY=true

# ===========================================
# AGENT SYSTEM CONFIGURATION
# ===========================================

# ADK (Agent Development Kit) Settings
ADK_PORT=8000
ADK_HOST=localhost
AGENT_COMMUNICATION_TIMEOUT=30

# Data Collection Intervals (in minutes)
COLLECTION_INTERVAL_MINUTES=5
INSIGHTS_GENERATION_INTERVAL_MINUTES=15

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Environment mode
ENVIRONMENT=production

# Python settings
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1
